@model HubBookingSystem.Data.Booking

@{
    ViewData["Title"] = "Edit";
}

<form method="post">
    <fieldset>
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary"> Edit Booking <i class="bi bi-bookmark-plus"></i></h2>
             </div> 
        </div>
        <div asp-validation-summary="None"></div>
        <div class="mb-3">
            <label asp-for="Title"> </label>
            <input asp-for="Title" class=" form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="SeatNumber"></label>
            <input asp-for="SeatNumber" class="form-control"/>
            <span asp-validation-for="SeatNumber" class="text-danger"></span>
        </div>
        <div>
        <label asp-for="BookDate" class="form-label mt-4">Date</label>
        <input asp-for="BookDate" class="form-select" data-mdb-toggle="datepicker">
    </div>
     <div>
        <label asp-for="BookTime" class="form-label mt-4">Date</label>
        <input asp-for="BookTime" class="form-select" data-mdb-toggle="timepicker">
    </div>

        <div>
            <label asp-for="Description" class="form-label mt-4">Description</label>
            <input asp-for="Description" class="form-control" rows="3">
        </div>
       <fieldset>
            <legend class="mt-3">Notify me</legend>
            <div class="form-check form-switch" >
                <input class="form-check-input" type="checkbox" id="notifyemail">
                <label class="form-check-label pb-4" for="notifyemail">Notify me when booking is successful</label>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-primary" value="Update" style="width:150px" row>Update <i class="bi bi-bookmark-check"></i></button>
        <div>
            <a asp-action="Index" class="btn btn-success w-100">Back</a>
        </div>
    </fieldset>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

