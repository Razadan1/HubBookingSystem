@model List<HubBookingSystem.Data.Booking>
<div class="container">
    <div class="row pt-2 pb-5"> 
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">
                    Booking List
                </h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Booking" asp-action="Create" class="btn btn-primary">
                    Make a booking <i class="bi bi-calendar-plus-fill"></i>
                </a>
            </div>
        </div>
    </div>
 </div>

<table class="table table-bordered table-striped">
    <thead>
    <th>
        Booking Id
    </th>
    <th>
        Title
    </th>
    <th>
        Seat Number
    </th>
    <th>
        Book Date
    </th>
    <th>
        Book Time
    </th>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td>
                    @obj.BookId
                </td>
                <td>
                    @obj.Title
                </td>
                <td>
                    @obj.SeatNumber
                </td>
                <td>
                    @obj.BookDate
                </td>
                <td>
                    @obj.BookTime
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Booking" asp-action="Edit" asp-route-Id="@obj.BookId" class="btn btn-primary mx-2">
                                Edit <i class="bi bi-pencil-square"></i>
                        </a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Booking" asp-action="Delete" asp-route-Id="@obj.BookId" class="btn btn-danger mx-2">
                            Delete <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
    
</table>